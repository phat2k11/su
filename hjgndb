local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer


local function tween(obj, t, data)
	return TweenService:Create(obj, TweenInfo.new(t, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), data)
end



local intro = Instance.new("ScreenGui")
intro.Name = "IntroGUI"
intro.IgnoreGuiInset = true
intro.Parent = player:WaitForChild("PlayerGui")

local black = Instance.new("Frame")
black.Size = UDim2.fromScale(1, 1)
black.BackgroundColor3 = Color3.new(0, 0, 0)
black.BackgroundTransparency = 1
black.Parent = intro

local logo = Instance.new("ImageLabel")
logo.AnchorPoint = Vector2.new(0.5, 0.5)
logo.Position = UDim2.fromScale(0.5, 0.45)
logo.Size = UDim2.fromScale(0.25, 0.25)
logo.BackgroundTransparency = 1
logo.ImageTransparency = 1
logo.Image = "rbxassetid://13613956679"
logo.Parent = intro

local title = Instance.new("TextLabel")
title.AnchorPoint = Vector2.new(0.5, 0.5)
title.Position = UDim2.fromScale(0.5, 0.7)
title.Size = UDim2.fromScale(0.8, 0.15)
title.BackgroundTransparency = 1
title.Text = "WELCOME TO YOUR GAME"
title.Font = Enum.Font.GothamBold
title.TextScaled = true
title.TextColor3 = Color3.new(1,1,1)
title.TextTransparency = 1
title.Parent = intro

local sound = Instance.new("Sound")
sound.SoundId = "rbxassetid://1843094923"
sound.Volume = 1
sound.Parent = intro

task.wait(0.3)
sound:Play()

tween(black, 1.2, {BackgroundTransparency = 0}):Play()
task.wait(1.2)

tween(logo, 1.2, {ImageTransparency = 0, Size = UDim2.fromScale(0.28, 0.28)}):Play()
task.wait(1)

tween(title, 1, {TextTransparency = 0}):Play()
task.wait(1.2)

tween(logo, 1.2, {ImageTransparency = 1}):Play()
tween(title, 1.2, {TextTransparency = 1}):Play()
tween(black, 1.4, {BackgroundTransparency = 1}):Play()

task.wait(1.4)
intro:Destroy()




local gui = Instance.new("ScreenGui")
gui.Name = "MainUI"
gui.Parent = player:WaitForChild("PlayerGui")


local openBtn = Instance.new("TextButton")
openBtn.Name = "OpenButton"
openBtn.Size = UDim2.new(0, 120, 0, 50)
openBtn.Position = UDim2.new(0, 20, 0.85, 0)
openBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
openBtn.Text = "OPEN MENU"
openBtn.TextScaled = true
openBtn.Font = Enum.Font.GothamBold
openBtn.TextColor3 = Color3.new(1,1,1)
openBtn.Parent = gui

local corner1 = Instance.new("UICorner")
corner1.CornerRadius = UDim.new(0, 15)
corner1.Parent = openBtn


local panel = Instance.new("Frame")
panel.Name = "MainPanel"
panel.Size = UDim2.new(0.35, 0, 1, 0)
panel.Position = UDim2.new(-0.35, 0, 0, 0)
panel.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
panel.Parent = gui

local panelCorner = Instance.new("UICorner")
panelCorner.CornerRadius = UDim.new(0, 15)
panelCorner.Parent = panel


local title2 = Instance.new("TextLabel")
title2.Text = "MAIN MENU"
title2.Size = UDim2.new(1,0,0.1,0)
title2.BackgroundTransparency = 1
title2.TextColor3 = Color3.new(1,1,1)
title2.Font = Enum.Font.GothamBold
title2.TextScaled = true
title2.Parent = panel

local closeBtn = Instance.new("TextButton")
closeBtn.Size = UDim2.new(0.4, 0, 0.1, 0)
closeBtn.Position = UDim2.new(0.3, 0, 0.85, 0)
closeBtn.BackgroundColor3 = Color3.fromRGB(255, 70, 70)
closeBtn.Text = "CLOSE"
closeBtn.TextScaled = true
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextColor3 = Color3.new(1,1,1)
closeBtn.Parent = panel

local corner2 = Instance.new("UICorner")
corner2.CornerRadius = UDim.new(0, 12)
corner2.Parent = closeBtn

local isOpen = false

openBtn.MouseButton1Click:Connect(function()
	if not isOpen then
		isOpen = true
		tween(panel, 0.5, {Position = UDim2.new(0, 0, 0, 0)}):Play()
	end
end)

closeBtn.MouseButton1Click:Connect(function()
	if isOpen then
		isOpen = false
		tween(panel, 0.5, {Position = UDim2.new(-0.35, 0, 0, 0)}):Play()
	end
end)
